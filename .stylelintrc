{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-gamut"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "layer",
          "apply",
          "responsive",
          "variants",
          "screen",
          "theme",
          "custom-variant"
        ]
      }
    ],
    "gamut/color-no-out-gamut-range": true,
    "import-notation": "string",
    "function-disallowed-list": ["rgba", "hsla", "rgb", "hsl"],
    "color-function-notation": "modern",
    "color-no-hex": true
  }
}