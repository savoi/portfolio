---
import '../styles/global.css';
import NeuroNoiseHero from '../components/NeuroNoiseHero.tsx';
import HeaderLogo from '~/components/HeaderLogo.astro';
import Favicons from '~/components/Favicons.astro';
import DarkThemeToggle from '~/components/DarkThemeToggle';

const { title = 'savoi.dev', description = 'Coming soon.' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="color-scheme" content="dark light" />
    <Favicons />
    <script is:inline>
      (() => {
        const stored = localStorage.getItem('theme');
        const prefers = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const theme = stored || (prefers ? 'dark' : 'light');
        document.documentElement.dataset.theme = theme;
        document.documentElement.classList.toggle('dark', theme === 'dark');
      })();
    </script>
  </head>
  <body class="relative h-svh bg-background text-text">
    <div class="pointer-events-none fixed inset-0 -z-10">
      <NeuroNoiseHero client:load />
    </div>
    <main class="flex flex-col gap-8 items-center justify-center h-svh">
      <div class="toggle-container flex items-center justify-center overflow-hidden">
        <DarkThemeToggle client:load />
    </div>
    <HeaderLogo url="#" width='clamp(200px, 25vw, 500px)' shadow={true} />
    </main>
  </body>
</html>