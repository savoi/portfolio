---
import '../styles/global.css';
import NeuroNoiseHero from '../components/NeuroNoiseHero.tsx';
import Favicons from '~/components/Favicons.astro';
import NavBar from '~/components/NavBar.astro';

const {
  title = 'Portfolio',
  description = 'Personal playground for projects, writing, and curious artefacts.',
  page = '',
} = Astro.props;

const currentPath = Astro.url.pathname || '/';
const normalizedBase = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
const basePath = normalizedBase.replace(/\/$/, '');
const relativePath =
  basePath && currentPath.startsWith(basePath) ? currentPath.slice(basePath.length) || '/' : currentPath || '/';

const isHomePage = relativePath === '/';
const homepageMainClasses = isHomePage ? 'flex flex-col justify-center' : '';
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <Favicons />
    <meta name="color-scheme" content="dark light" />
    <script>
      (() => {
        const stored = localStorage.getItem('theme');
        const prefers = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const theme = stored || (prefers ? 'dark' : 'light');
        document.documentElement.dataset.theme = theme;
        document.documentElement.classList.toggle('dark', theme === 'dark');
      })();
    </script>
  </head>
  <body class="relative flex min-h-screen flex-col bg-background text-text">
    {isHomePage && (
      <div class="pointer-events-none fixed inset-0 -z-10">
        <NeuroNoiseHero client:load />
      </div>
    )}
    {!isHomePage && (
      <div class="pointer-events-none fixed inset-0 -z-10 light-texture" aria-hidden="true"></div>
    )}
    <NavBar />

    <main class={`${homepageMainClasses} flex-1`}>
      <slot />
    </main>

    <footer class="container mx-auto px-4 md:px-8 pb-12 pt-8 mt-12 text-sm">
      <p class="font-medium">
        Built with
        <svg
          aria-hidden="true"
          viewBox="0 0 24 24"
          class="inline mb-0.5 h-4 w-4 hover:animate-pulse hover:text-red-500"
          fill="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M12 20s-6.2-4.7-8.3-8.3C1.6 9.5 2 6.3 4.3 4.7a5 5 0 0 1 6.2.4L12 7l1.5-1.9a5 5 0 0 1 6.2-.4c2.3 1.6 2.7 4.8.3 7C18.2 15.3 12 20 12 20z" />
        </svg>
        <span class="sr-only">love</span>
        in Winnipeg, Canada using 
        <a href="https://astro.build" target="_blank" rel="noreferrer">Astro</a> / 
        <a href="https://tailwindcss.com" target="_blank" rel="noreferrer">Tailwind</a> / 
        <a href="https://shaders.paper.design" target="_blank" rel="noreferrer">Paper Shaders</a>.
      </p>
      <p class="mt-2">
        Â© {new Date().getFullYear()} Josh Greenberg. All rights reserved.
      </p>
    </footer>
  </body>
</html>
