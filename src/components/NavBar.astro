---
import HeaderLogo from '~/components/HeaderLogo.astro';
import CandleThemeToggle from '~/components/CandleThemeToggle';

const navItems = [
  { href: '/about', label: 'About', match: ['/about'] },
  { href: '/projects', label: 'Projects', match: ['/projects'] },
  { href: '/blog', label: 'Blog', match: ['/blog'] },
  { href: '/artefacts', label: 'Artefacts', match: ['/artefacts'] },
  { href: '/contact', label: 'Contact', match: ['/contact'] },
];

const currentPath = Astro.url.pathname || '/';
const normalizedBase = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
const basePath = normalizedBase.replace(/\/$/, '');
const relativePath =
  basePath && currentPath.startsWith(basePath) ? currentPath.slice(basePath.length) || '/' : currentPath || '/';

const buildUrl = (href: string) => {
  if (href === '/') {
    return normalizedBase;
  }
  return `${normalizedBase}${href.replace(/^\//, '')}`;
};

// Navigation bar link styles
const linkBase = 'rounded-sm px-3 py-2 text-2xl font-light transition-colors duration-200';
const linkActive = 'bg-navbar-link-active text-navbar-link-fg';
const linkIdle = 'hover:bg-navbar-link-bg hover:text-navbar-link-fg';
---
<nav class="container mx-auto mb-8 px-4 flex flex-col gap-4 pb-4 pt-8 md:flex-row md:items-center md:justify-between">
  <div class="flex gap-8">
    <HeaderLogo url={buildUrl('/')} />
    <CandleThemeToggle client:load/>
  </div>
  <ul class="flex flex-wrap items-center gap-3">
    {navItems.map(({ href, label, match }) => {
      const active = match.some((route) => (route === '/' ? relativePath === '/' : relativePath.startsWith(route)));
      return (
        <li>
          <a href={buildUrl(href)} class={`${linkBase} ${active ? linkActive : linkIdle}`}>
            {label}
          </a>
        </li>
      );
    })}
  </ul>
</nav>