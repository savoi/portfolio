---
import Card from "./Card.astro";
import EnvelopeIcon from "~/assets/icon-envelope.svg";
import GitHubIcon from "~/assets/icon-github.svg";
import LinkedInIcon from "~/assets/icon-linkedin.svg";
import ProfilePicture from "~/assets/profile-card.jpeg";

export interface Props {
  blur?: boolean;
  image?: string;
  name?: string;
  title?: string;
  email?: string;
  linkedin?: string;
  github?: string;
  blurb?: string;
}

const {
  blur = true,
  image = "",
  name = "Josh Greenberg",
  title = "Full-Stack Software Engineer",
  email = "josh@savoi.dev",
  linkedin = "https://linkedin.com/in/jc-greenberg",
  github = "https://github.com/savoi",
  blurb = "I build modern web experiences, AI-powered tools, and Shopify integrations."
} = Astro.props;
---

<Card blur={blur}>
  <div class="flex flex-col items-center text-center gap-4">
    
    <!-- Avatar -->
    <img 
      src={image || ProfilePicture.src} 
      alt={name} 
      class="w-32 h-32 rounded-full object-cover border border-neutral-700 shadow-md"
    />

    <!-- Name + Title -->
    <div>
      <h2 class="text-2xl font-semibold">{name}</h2>
      <p class="text-text/70 text-md">{title}</p>
    </div>

    <!-- Contact Links -->
    <div class="flex items-center gap-3 mt-2">
      <!-- Email -->
      <a 
        href={`mailto:${email}`} 
        class="text-text hover:text-white transition-colors"
        aria-label="Email"
      >
        <EnvelopeIcon class="size-10" />
      </a>

      <!-- LinkedIn -->
      <a 
        href={linkedin} 
        class="text-text hover:text-white transition-colors"
        aria-label="LinkedIn"
        target="_blank"
      >
        <LinkedInIcon class="size-10" />
      </a>

      <!-- GitHub -->
      <a 
        href={github} 
        class="text-text hover:text-white transition-colors"
        aria-label="GitHub"
        target="_blank"
      >
        <GitHubIcon class="size-10" />
      </a>
    </div>

    <!-- Blurb -->
    <p class="text-neutral-300 mt-4 leading-relaxed px-2">
      {blurb}
    </p>
  </div>
</Card>