---
export interface Props {
  class?: string;
  title?: string;
  style?: 'hero' | 'card' | 'default';
}

const {
  title = '',
  style = 'default',
  class: className = '',
} = Astro.props as Props;

// Default badge styles
let baseClasses = "inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold tracking-wide";
let lightPaletteClasses = "";
let darkPaletteClasses = "";

if (style === 'hero') {
  // Hero badge styles
  baseClasses = "mx-8 inline-flex items-center rounded-full px-4 py-1 text-xs font-semibold uppercase tracking-[0.4em] bg-badge-bg/90 text-badge-text";
  lightPaletteClasses = "shadow-lg/40";
} else if (style === 'card') {
  // Card badge styles
  baseClasses = "inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium uppercase tracking-wide";
  lightPaletteClasses = "bg-background/60 text-muted shadow-sm";
}
---
<span class=`${baseClasses} ${lightPaletteClasses} ${darkPaletteClasses} ${className}`>
  {title}
</span>