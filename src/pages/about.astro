---
import FullWidthHeroLayout from '../layouts/FullWidthHeroLayout.astro';
import PortraitSketchSvg from '../assets/portrait-sketch.svg?raw';
import Card from '../components/Card.astro';
import ShaderCardStage from '~/components/ShaderCardStage.astro';
import FeaturedImageWithText from '~/components/FeaturedImageWithText.astro';
import SkillsCard from '~/components/SkillsCard.astro';

const interests = [
  { title: 'Generative Systems', description: 'Exploring procedural generation, noise functions, and emergent behaviors in code.' },
  { title: 'Interactive Storytelling', description: 'Building narrative experiences that respond to user input and environmental data.' },
  { title: 'Ambient Computing', description: 'Designing interfaces that fade into the background while remaining deeply useful.' },
  { title: 'Creative Coding', description: 'Using programming as a medium for artistic expression and visual experimentation.' },
];

const aboutMeCard = {
  component: FeaturedImageWithText,
  props: {
    title: 'A bit about me',
    image: new URL('/profile3.jpeg', Astro.url).href,
    body: `I'm a developer who gets excited about the spaces where technology meets human creativity. Whether I'm crafting interactive
    experiences, writing about process, or tinkering with generative systems, I'm always looking for ways to make the web more
    delightful and meaningful.
    When I'm not coding, you'll find me sketching in notebooks, collecting ambient soundscapes, or exploring how digital tools
    can enhance rather than replace human expression. I believe the best interfaces feel like magic – effortless to use, but rich
    with possibility underneath.
    This portfolio is my digital workshop – a place to share experiments, document learning, and connect with fellow makers and
    thinkers. Thanks for stopping by!`,
  },
};

const skillsCard = {
  component: SkillsCard,
  props: {
    title: 'Skills & Tools',
    sections: [
      {
        heading: 'Languages & Frameworks',
        skills: ['JavaScript', 'TypeScript', 'React', 'Svelte', 'Astro', 'Node.js', 'GraphQL'],
      },
      {
        heading: 'Creative Tech',
        skills: ['Canvas API', 'Web Audio', 'GLSL', 'p5.js', 'D3.js'],
      },
      {
        heading: 'Design & Workflow',
        skills: ['Figma', 'Ableton Live']
      }
    ],
  },
};
---
<FullWidthHeroLayout
  title="About · Josh"
  description="Get to know the person behind the pixels and code."
  page="about"
  pageHeading="Building at the intersection of code, design, and storytelling."
  pageSubheading={`"I enjoy shaping tactile, expressive experiences for the web—where
                  thoughtful code meets editorial storytelling and playful 
                  interaction design."`}
>
  <ShaderCardStage
    slot="overlay"
    shader="water"
    shaderQuality='ultra'
    maxWidthClass='max-w-4xl'
    shaderProps={{
      image: new URL('/profile3.jpeg', Astro.url).href,
      edges: 1,
      waves: 1,
      caustic: 0.4,
      size: 0.15,
      speed: 0.2,
      scale: 3,
      fit: "cover"
    }}
    cards={[aboutMeCard, skillsCard]}
    columns={1}
  />

  <div slot="page-content">
    <Card
    as="section"
    interactive={false}
  >
    <figure class="flex items-start justify-centers mx-8">
      <div
        class="[&>svg]:w-[200px] [&>svg>]:auto [&_path]:fill-green-50"
        set:html={PortraitSketchSvg}
        role="img"
        aria-label="A hand-drawn self-portrait sketch"
      />
    </figure>
    <div class="space-y-5 overflow-hidden">
      <div>
        <h2 class="text-4xl font-semibold">A bit about me</h2>
      </div>
      <div class="space-y-4">
        <p>
          I'm a developer who gets excited about the spaces where technology meets human creativity. Whether I'm crafting interactive
          experiences, writing about process, or tinkering with generative systems, I'm always looking for ways to make the web more
          delightful and meaningful.
        </p>
        <p>
          When I'm not coding, you'll find me sketching in notebooks, collecting ambient soundscapes, or exploring how digital tools
          can enhance rather than replace human expression. I believe the best interfaces feel like magic – effortless to use, but rich
          with possibility underneath.
        </p>
        <p>
          This portfolio is my digital workshop – a place to share experiments, document learning, and connect with fellow makers and
          thinkers. Thanks for stopping by!
        </p>
      </div>
    </div>
    </Card>

    <section class="grid gap-8 pb-16 lg:grid-cols-2">
    <div class="space-y-5">
      <h2 class="text-2xl font-semibold">Current Interests</h2>
      <div class="grid gap-4">
        {interests.map(({ title, description }) => (
          <Card>
            <h3 class="text-lg font-semibold">{title}</h3>
            <p class="mt-2 text-sm">{description}</p>
          </Card>
        ))}
      </div>
    </div>
    </section>
  </div>
</FullWidthHeroLayout>
