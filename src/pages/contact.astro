---
import FullWidthHeroLayout from "../layouts/FullWidthHeroLayout.astro";
import ContactCard from "~/components/ContactCard.astro";
import ShaderCardStage from "~/components/ShaderCardStage.astro";

const contactCard = {
  component: ContactCard,
  props: {
    blur: true,
    name: 'Josh Greenberg',
    title: 'Full-Stack Software Engineer',
    email: 'josh@savoi.dev'
  },
}

---
<FullWidthHeroLayout
  title="Contact"
  description="Get in touch with me for collaborations, inquiries, or just to say hello."
  page="contact"
  pageHeading="I'd love to hear from you."
  pageSubheading="Whether you have a question, a project idea, or just want to chat, feel free to reach out!"
>
  <ShaderCardStage
    slot="overlay"
    shader="godRays"
    shaderQuality='high'
    speed={0.8}
    speedDark={0.4}
    columns={1}
    maxWidthClass="max-w-lg"
    shaderProps={{
      colors: ["#ffec70", "#f3bb77", "#d9ab9b", "#b09ca7"],
      colorBack: "#0f091b",
      colorBloom: "#d91212",
      bloom: 1,
      intensity: 0.5,
      density: 0.3,
      spotty: 0.5,
      midSize: 0,
      midIntensity: 0,
      offsetX: 0,
      offsetY: -0.7,
      scale: 3
    }}
    cards={[contactCard]}
  />
</FullWidthHeroLayout>